<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg"

    tools:context="lk.sliit.appointment.appointment_manager_sliit.AdminTimeAllocate">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/top1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#f4d411"
            android:text="Choose Free Times"
            android:id="@+id/textView4" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/top1"
        android:id="@+id/middle1"
        android:layout_width="match_parent"
        android:layout_height="350dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView2" >

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <CheckBox
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:text="08:30 AM - 09:00 AM"
                        android:id="@+id/ckbTime1"
                        android:layout_column="0" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="09:00 AM - 09:30 AM"
                        android:id="@+id/ckbTime2"
                        android:layout_column="1"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <CheckBox
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:text="09:30 AM - 10:00 AM"
                        android:id="@+id/ckbTime3"
                        android:layout_column="0" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10:00 AM - 10:30 AM"
                        android:id="@+id/ckbTime4"
                        android:layout_column="1"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <CheckBox
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:text="10:30 AM - 11:00 AM"
                        android:id="@+id/ckbTime5"
                        android:layout_column="0" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11:00 AM - 11:30 AM"
                        android:id="@+id/ckbTime6"
                        android:layout_column="1"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <CheckBox
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:text="11:30 AM - 12:00 AM"
                        android:id="@+id/ckbTime7"
                        android:layout_column="0" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12:00 PM - 12:30 PM"
                        android:id="@+id/ckbTime8"
                        android:layout_column="1"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <CheckBox
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:text="12:30 PM - 01:00 PM"
                        android:id="@+id/ckbTime9"
                        android:layout_column="0" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="01:00 PM - 01:30 PM"
                        android:id="@+id/ckbTime10"
                        android:layout_column="1"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <CheckBox
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:text="01:30 PM - 02:00 PM"
                        android:id="@+id/ckbTime11"
                        android:layout_column="0" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="02:00 PM - 02:30 PM"
                        android:id="@+id/ckbTime12"
                        android:layout_column="1"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <CheckBox
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:text="02:30 PM - 03:00 PM"
                        android:id="@+id/ckbTime13"
                        android:layout_column="0" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="03:00 PM - 03:30 PM"
                        android:id="@+id/ckbTime14"
                        android:layout_column="1"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <CheckBox
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:text="03:30 PM - 04:00 PM"
                        android:id="@+id/ckbTime15"
                        android:layout_column="0" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="04:00 PM - 04:30 PM"
                        android:id="@+id/ckbTime16"
                        android:layout_column="1"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <CheckBox
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:text="04:30 PM - 05:00 PM"
                        android:id="@+id/ckbTime17"
                        android:layout_column="0" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="05:00 PM - 05:30 PM"
                        android:id="@+id/ckbTime18"
                        android:layout_column="1"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <CheckBox
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:text="05:30 PM - 06:00 PM"
                        android:id="@+id/ckbTime19"
                        android:layout_column="0" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="06:00 PM - 06:30 PM"
                        android:id="@+id/ckbTime20"
                        android:layout_column="1"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <CheckBox
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:text="06:30 PM - 07:00 PM"
                        android:id="@+id/ckbTime21"
                        android:layout_column="0" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="07:00 PM - 07:30 PM"
                        android:id="@+id/ckbTime22"
                        android:layout_column="1"/>
                </TableRow>

            </TableLayout>
        </ScrollView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/middle1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/bot1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:id="@+id/btnSubmit"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</RelativeLayout>
