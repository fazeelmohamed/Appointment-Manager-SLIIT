<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="lk.sliit.appointment.appointment_manager_sliit.AdminDashboard"
    tools:showIn="@layout/activity_admin_dashboard">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"></RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="189dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtLecturer"
            android:hint="Lecturer name" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtEmail1"
            android:layout_below="@+id/txtLecturer"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:hint="Email" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtPass"
            android:layout_below="@+id/txtEmail1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:hint="Password" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText4"
            android:hint="Confirm password"
            android:layout_below="@+id/txtPass"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose the subjects"
            android:textColor="#f4d411"
            android:id="@+id/textView" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView" >

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="780dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <CheckBox
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:text="SPDC"
                        android:id="@+id/ckbSPDC"
                        android:checked="false" />

                    <CheckBox
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:text="SE III"
                        android:layout_toRightOf="@+id/ckbSubject1"
                        android:id="@+id/ckbSE3"
                        android:checked="false" />

                    <CheckBox
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:text="HCI"
                        android:layout_toRightOf="@+id/ckbSubject2"
                        android:id="@+id/ckbHCI"
                        android:checked="false"
                        android:layout_column="2" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <CheckBox
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:text="SEP"
                        android:id="@+id/ckbSEP"
                        android:checked="false" />

                    <CheckBox
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:text="Subject 5"
                        android:layout_toRightOf="@+id/ckbSubject4"
                        android:id="@+id/ckbMAD"
                        android:checked="false" />

                    <CheckBox
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:text="SE II"
                        android:layout_toRightOf="@+id/ckbSubject5"
                        android:id="@+id/ckbSE2"
                        android:checked="false"
                        android:layout_column="2" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <CheckBox
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:text="ITP"
                        android:id="@+id/ckbITP"
                        android:checked="false" />

                    <CheckBox
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:text="ITA"
                        android:layout_toRightOf="@+id/ckbSubject7"
                        android:id="@+id/ckbSubject8"
                        android:checked="false" />

                    <CheckBox
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:text="PS"
                        android:layout_toRightOf="@+id/ckbSubject8"
                        android:id="@+id/ckbPS"
                        android:checked="false"
                        android:layout_column="2" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <CheckBox
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:text="SPD"
                        android:id="@+id/ckbSPD"
                        android:checked="false" />

                    <CheckBox
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:text="ST II"
                        android:layout_toRightOf="@+id/ckbSubject10"
                        android:id="@+id/ckbST2"
                        android:checked="false" />

                    <CheckBox
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:text="ST I"
                        android:layout_toRightOf="@+id/ckbSubject11"
                        android:id="@+id/ckbST1"
                        android:checked="false"
                        android:layout_column="2" />
                </TableRow>
            </TableLayout>



        </ScrollView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="83dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="240dp"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Next"
                    android:id="@+id/btnNext"
                    android:layout_column="0"
                    android:onClick="btnRegisterClick" />
            </TableRow>
        </TableLayout>
    </RelativeLayout>

</TableLayout>
